{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "types": ["node", "jest"],
      "skipLibCheck": true,
      "outDir": "./dist",
      "rootDir": "."
